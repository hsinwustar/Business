<div class="title"></div>
<div class="txt">
    <form action="/staff/search" method="get">
        <table class="theme" >
            <caption class="table-name"><p>职员管理系统</p></caption>
            <tr>
                <td>
                    <select name="select_change" >
                        <option value="all" name="all" selected>请选择查询方式</option>
                        <option value="id"  name="id">人员编号</option>
                        <option value="name" name="name">人员姓名</option>
                    </select>
                </td>&nbsp;
                <td><input type="text" name="text_change" class="text_input"/></td>
                <td><input type="submit" value="搜索" class="la"/></td>

                <td><a href="/staff/add_sta"><img src="../images/ico-img/tianjia.png"></a></td>
            </tr>
        </table>

        <table  >
            <tr>
                <th width="10%" >人员编号</th>
                <th width="10%">人员名字</th>
                <th width="10%">年龄</th>
                <th width="10%">性别</th>
                <th width="10%">电话</th>
                <th width="10%">职位</th>
                <th width="10%" >工资</th>
                <th width="10%" >地址</th>
                <th width="15%">操作</th>

            </tr>

            <tr>
                <% if (datas.length) { %>
                <% datas.forEach(function(staff){ %>
                <td><%= staff.s_id %></td>

                <td><%= staff.s_name %></td>
                <td><%= staff.s_age %></td>
                <td><%= staff.s_sex %></td>
                <td><%= staff.s_tel %></td>
                <td><%= staff.s_pos %></td>
                <td><%= staff.s_sal %></td>
                <td><%= staff.s_ad %></td>
                <td><a href="/staff/delete/<%= staff.s_id %>"> 删除</a>&nbsp;&nbsp;<a href="/staff/toUpdate/<%= staff.s_id %>">修改</a></td>
            </tr>
            <% }) %>
            <% } %>
        </table>

    </form>
</div>
</body>

</html>